<h1 class="text-center text-4xl font-bold mb-5 text-gray-800 dark:text-gray-200">Planet</h1>

<table class="w-full border-collapse shadow-lg rounded-lg overflow-hidden">
  <thead>
    <tr class="bg-sky-400 text-white text-lg">
      <th class="px-6 py-3 border-2 border-teal-500">ID</th>
      <th class="px-6 py-3 border-2 border-teal-500">Name</th>
      <th class="px-6 py-3 border-2 border-teal-500">Distance (AU)</th>
      <th class="px-6 py-3 border-2 border-teal-500">Orbital Period (Years)</th>
    </tr>
  </thead>
  <tbody>
    <tr class="bg-blue-50 even:bg-cyan-100 hover:bg-blue-200 cursor-pointer text-lg">
      <td class="px-6 py-3 border-2 border-teal-500"><%= @planet.id %></td>
      <td class="px-6 py-3 border-2 border-teal-500"><%= @planet.name %></td>
      <td class="px-6 py-3 border-2 border-teal-500"><%= @planet.distance %></td>
      <td class="px-6 py-3 border-2 border-teal-500"><%= @planet.orbital_period %></td>
    </tr>
  </tbody>
</table>
